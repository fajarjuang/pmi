@model PMI.Models.Post

@{
    ViewBag.Title = "Palang Merah Indonesia";
    Layout = "~/Views/Shared/_Onepage.cshtml";
}

@section javascripts {
}

<div class="row" id="menu">
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav">
                <li class="active"><a href="/">Home</a></li>
                <li>@Html.ActionLink("News", "AllNews", "Home")</li>
                <li>@Html.ActionLink("Who We Are", "Index", "Information", new { area = "Portal" }, null)</li>
                <li>@Html.ActionLink("What We Do", "Index", "Programs", new { area = "Portal" }, null)</li>
                <li><a href="#">Contact Us</a></li>
            </ul>
            <ul class="nav pull-right">
                <li><a href="#">Public / PMI Members</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div id="headline" class="span8">
        @if (!String.IsNullOrEmpty(Model.image))
        {
            <img src="@Url.Content(Model.image)" />
        }
        <h1>@Model.culturedTitle</h1>
        <p>
            @Html.SanitizeHTML(Model.getContentSummary())
        </p>
        <p>
            @Html.ActionLink("read more...", "News", new { id = Model.id }, new { @class = "read-more" })
        </p>
    </div>
    <div id="social-media1" class="span4">
        <h3>Talk to us!</h3>
        <div class="icons">
            <a href="#"><img src="@Url.Content("~/Content/images/icons/icon-facebook.png")" /></a>
            <a href="#"><img src="@Url.Content("~/Content/images/icons/icon-twitter.png")" /></a>
            <a href="#"><img src="@Url.Content("~/Content/images/icons/icon-googleplus.png")" /></a>
            <a href="#"><img src="@Url.Content("~/Content/images/icons/icon-youtube.png")" /></a>
        </div>
    </div>
    <div id="social-media2" class="span4">
        <h4>What They Said</h4>
        <img src="@Url.Content("~/Content/images/video-placeholder.jpg")" />
    </div>
</div>

<div class="row">
    <div id="tag-cloud" class="span4">
        <h4>What People Talk About</h4>

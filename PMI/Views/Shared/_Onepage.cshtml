<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ThemeContent("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ThemeContent("~/Content/main-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/onepage.css")" rel="Stylesheet" type="text/css" />
    @if (IsSectionDefined("stylesheet"))
    { 
        @RenderSection("stylesheet", false)
    }
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-i18n.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/pmi/language-selector.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cycle.all.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $('#portal-menu').cycle({
            fit: true,
            // width: ($(window).width() * 74.35897435897436 / 100), // 0.74... is span9's percentage on bootstrap
            width: ($(window).width() * 0.72), // 0.74... is span9's percentage on bootstrap
            // width: ($(window).width() * 65.81196581196582 / 100), // 0.74... is span9's percentage on bootstrap
        });
    </script>
    @if (IsSectionDefined("javascripts"))
    { 
        @RenderSection("javascripts", false)
    }
</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="row">
                <div id="logo">
                    <img src="@Url.Content("~/Content/images/logo-pmi.png")" /></div>
                <form class="form-inline" id="language-selection">
                <label for="lang-change">@GlobalResources.LanguageSelection :</label>
                <select id="lang-change" name="lang-change">
                    <option value="id">@GlobalResources.Indonesian</option>
                    <option value="en">@GlobalResources.English</option>
                </select>
                </form>
            </div>
            <div class="row">
                <div id="call-center" class="tile span3">
                    <img src="@Url.Content("~/Content/images/icons/icon-call.png")" width="40px" class="tile-logo" /><br />
                    @MainPageResources.NationalCallCenter
                    <br />
                    <br />
                    <span class="tile-focus">179</span>
                </div>
                <div id="portal-menu" class="tile span9">
                    <div class="slide">
                        <h1>
                            Our Portal</h1>
                        <p>
                            <a href="#">Join us.</a> Communicate. Work together. Discuss.</p>
                    </div>
                    <div class="slide">
                        <h1 class="warning">
                            Alert!</h1>
                        <p>
                            Notification: There is a big flood in X. <a href="#">Donation needed.</a></p>
                    </div>
                    <div class="slide">
                        <h1>
                            Connections</h1>
                        <p>
                            <a href="#">Local Governer</a> - <a href="#">NGO</a></p>
                    </div>
                </div>
            </div>

            <div class="row" id="menu">
                @Html.Action("MainMenu", "Navigation", new { controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue, action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue, area = "" })
            </div>

            @RenderBody()
        </div>
    </div>
</body>
</html>

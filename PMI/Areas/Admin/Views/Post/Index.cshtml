@model IEnumerable<PMI.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Daftar Tulisan</h2>

<p>
    @Html.ActionLink("Tambah Baru", "Create", "Post", new { @class = "btn btn-info" })
</p>

<table class="table">
<thead>
    <tr>
        <th>
            Judul Berita
        </th>
        <th>
            Waktu Penulisan
        </th>
        <th>
            Update Terakhir
        </th>
        <th>
            Kategori
        </th>
        <th>
            Penulis
        </th>
        <th>
            Isi
        </th>
        <th></th>
    </tr>
</thead>

<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.updated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aspnet_Users.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detil", "Details", new { id=item.id }) |
            @Html.ActionLink("Hapus", "Delete", new { id=item.id })
        </td>
    </tr>
}
</tbody>
</table>

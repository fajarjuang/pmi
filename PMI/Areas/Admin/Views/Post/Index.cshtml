@model IPagedList<PMI.Models.Post>

@{
    ViewBag.Title = "Index";
    string titleSort = ViewBag.TitleSort == "title-desc" ? "\u25BC" : "\u25B2";
    string createdSort = ViewBag.CreatedSort == "created-desc" ? "\u25BC" : "\u25B2";
    string updatedSort = ViewBag.UpdatedSort == "updated-asc" ? "\u25B2" : "\u25BC";
}

<h2>Daftar Tulisan</h2>

<p>
    @Html.ActionLink("Tambah Baru", "Create", "Post", new { @class = "btn btn-info" })
</p>

<table class="table">
<thead>
    <tr>
        <th>
            @Html.ActionLink(titleSort, "Index", new { sort = ViewBag.TitleSort })
            Judul Berita
        </th>
        <th>
            @Html.ActionLink(createdSort, "Index", new { sort = ViewBag.CreatedSort })
            Waktu Penulisan
        </th>
        <th>
            @Html.ActionLink(updatedSort, "Index", new { sort = ViewBag.UpdatedSort })
            Update Terakhir
        </th>
        <th>
            Kategori
        </th>
        <th>
            Penulis
        </th>
        <th>
            Isi
        </th>
        <th></th>
    </tr>
</thead>

<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.updated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aspnet_Users.UserName)
        </td>
        <td nowrap="wrap" style="width: 300px">
            @Html.Raw(PMI.Utils.HtmlUtility.SanitizeHtml(item.getContentSummary()))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Tampilkan", "Details", new { id=item.id }) |
            @Html.ActionLink("Hapus", "Delete", new { id=item.id })
        </td>
    </tr>
}
</tbody>
<tfoot>
    <tr>
        <td colspan="7">@Html.PagedListPager(Model, page => Url.Action("Index", new {page}))</td>
    </tr>
</tfoot>
</table>
